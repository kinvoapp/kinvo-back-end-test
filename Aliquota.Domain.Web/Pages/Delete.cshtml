@page
@model Aliquota.Domain.Web.Pages.DeleteModel
@{
    ViewData["Title"] = "Excluir Aplicação";
}

<form method="post">
    <input asp-for="application.Id" hidden />

    <div class="container border p-0 shadow">
        <div class="container my-3">
            <div class="row justify-content-center mb-3 ">
                <div class="col-auto">
                    <h1 class="text-danger font-weight-bold">@ViewData["Title"]?</h1>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col">

                    <div class="row mx-1">
                        <div class="col">
                            <div class="form-group row">
                                <label asp-for="application.InvestedValue"></label>
                                <input asp-for="application.InvestedValue" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.ProfitValue"></label>
                                <input asp-for="application.ProfitValue" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.TotalValue"></label>
                                <input asp-for="application.TotalValue" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.WithholdedValue"></label>
                                <input asp-for="application.WithholdedValue" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.MonthlyInterestRate"></label>
                                <input asp-for="application.MonthlyInterestRate" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.ExpectedMonthlyPeriod"></label>
                                <input asp-for="application.ExpectedMonthlyPeriod" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.ApplyDate"></label>
                                <input asp-for="application.ApplyDate" class="form-control w-auto mx-1" readonly>
                            </div>
                            <div class="form-group row">
                                <label asp-for="application.WithdrawDate"></label>
                                <input asp-for="application.WithdrawDate" class="form-control w-auto mx-1" readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row mt-3 justify-content-center">
                        <div class="col-auto">
                            <input class="btn btn-success m-1 w-auto" type="submit" value="Confirmar" />
                        </div>
                        <div class="col-auto">
                            <a asp-page="Index" class="btn btn-danger m-1 w-auto">Cancelar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
