@model IEnumerable<Aliquota.Application.ViewModels.ApplicationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Minhas Aplicações</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentValue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentValue)
            </td>
            <td>
                @Html.ActionLink("Retirar Valor", "Edit", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
