@model Aliquota.WebApp.Models.ProdutoFinanceiroViewModel.ProdutoFinanceiroVM

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Produto Financeiro</h1>

<h3>Tem certeza que quer fazer essa exclusão?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAplicado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorAplicado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorIR)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorIR)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataAplicacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataAplicacao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataResgate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataResgate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status == Aliquota.Domain.Models.Status.EmAplicacao)
            {
                <h5><span class="badge badge-primary">Em Aplicação</span></h5>
            }
            else
            {
                <h5><span class="badge badge-danger">Resgatado</span></h5>
            }
        </dd>
    </dl>
    
    <form asp-action="Deletar">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Painel">Retornar ao Painel</a>
    </form>
</div>
