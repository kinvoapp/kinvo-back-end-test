@model Aliquota.WebApp.Models.ProdutoFinanceiroViewModel.ProdutoFinanceiroFormVM

@{
    ViewData["Title"] = "Novo";
}

<h1>Novo</h1>

<h4>Produto Financeiro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Novo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ValorAplicado" class="control-label"></label>
                <input asp-for="ValorAplicado" class="form-control" />
                <span asp-validation-for="ValorAplicado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoProdutoFinanceiroFk" class="control-label"></label>
                <select asp-for="TipoProdutoFinanceiroFk" class="form-control" asp-items="ViewBag.TipoProdutoFinanceiroFk"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Painel" asp-action="Index">Voltar para o Painel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
