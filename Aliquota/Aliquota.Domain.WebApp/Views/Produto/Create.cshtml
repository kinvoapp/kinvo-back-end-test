@model Aliquota.Domain.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Produto</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Produto" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaxaRendimentoAnual" class="control-label"></label>
                <input type="number" asp-for="TaxaRendimentoAnual" class="form-control" />
                <span asp-validation-for="TaxaRendimentoAnual" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary m-1" />
                <a asp-action="Index" class="btn btn-light m-1" >Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
