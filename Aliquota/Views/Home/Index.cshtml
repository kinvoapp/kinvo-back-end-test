

<div class="page-header">
    <div class="col-lg-12 col-sm-12">
        <h1>Gerenciador de Produtos</h1>

        <form class="form-horizontal">
            <div class="form-group">
                <div class="col-lg-12 col-sm-12">
                    <input type="text" placeholder="Procurar.." class="form-control" name="search" id="inputBusca" onkeyup="Buscar()">
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">

 

    <!-- ko if:detail() -->

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Detalhes</h2>
            </div>
            <table class="table">
                <tr><td>Id</td><td data-bind="text: detail().Id"></td></tr>
                <tr><td>Valor</td><td data-bind="text: detail().valor"></td></tr>
                <tr><td>Data</td><td data-bind="text: detail().dataAplicacao"></td></tr>
            </table>
        </div>
    </div>

    <!-- /ko -->
    <div class="col-lg-12"></div>

    <div class="col-md-5 col-lg-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Adicionar Produto</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addProduto">
                    <div class="form-group">
                        <label for="inputFabricante" class="col-sm-3 col-md-6 col-lg-2 control-label">Fabricante</label>
                        <div class="col-sm-12 col-lg-12 col-md-12">
                            <select class="form-control" data-bind="options:fabricantes, optionsText: 'Name', value: newProduto.Fabricante"></select>
                        </div>
                    </div>
                    <div class="form-group" data-bind="with: newProduto">
                        <label for="inputName" class="col-sm-4 col-lg-5 col-md-7 col-lg-4 control-label">Nome do Produto</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="inputName" data-bind="value:Name" />
                        </div>

                        <label for="inputPrice" class="col-sm-3 col-lg-2 col-md-1 control-label">Preço</label>
                        <div class="col-sm-12">
                            <input type="number" id="inputPreco" step="0.01" placeholder="100.00" class="form-control" data-bind="value:Price">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default" onclick="toNumber()">Adicionar</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Adicionar Fabricante</h2>
            </div>

            <div class="panel-body">
                <form class="form-horizontal" data-bind="submit: addFabricante">
                    <div class="form-group" data-bind="with: newFabricante">
                        <label for="inputName" class="col-sm-4 col-lg-6 col-md-7 control-label">Nome do Fabricante</label>
                        <div class="col-sm-12">
                            <input type="text" class="form-control" id="inputFabricante" data-bind="value:Name" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-default">Adicionar</button>
                </form>
            </div>
        </div>
    </div>
</div>