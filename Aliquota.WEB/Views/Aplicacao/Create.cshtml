@model Aliquota.Application.ViewModels.AplicacaoCreateViewModel

@{ ViewData["Title"] = "Create"; }

<h1>Nova Aplicação</h1>

<div>
    <hr />
    <form id="FormCad" accept-charset="UTF-8" asp-action="Create" method="POST">

        @if (ViewContext.ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var item in ViewContext.ViewData.ModelState)
                {
                    if (item.Value.Errors.Any())
                    {
                        <p>@(string.Join("", item.Value.Errors.Select(x => x.ErrorMessage)))</p>
                    }
                }
            </div>
        }
        
        <div class="row mt-1">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </div>
            <div class="col-sm-10">
                <input asp-for="Nome" id="" class="form-control">
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorAplicado)
            </div>
            <div class="col-sm-10">
                <input asp-for="ValorAplicado" id="" class="form-control">
            </div>
        </div>
        <div class="row mt-1">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataAplicacao)
            </div>
            <div class="col-sm-10">
                <input asp-for="DataAplicacao" id="" class="form-control">
            </div>
        </div>

        <div class="row mt-1 text-left">
            <div class="col-sm-2 mt-l"><a class="btn btn-secondary shadow-0 btn-sm" asp-action="Index">Listagem</a></div>
            <div class="col-sm-2"><button class="btn btn-secondary shadow-0 btn-sm" type="submit">Salvar</button></div>
        </div>

    </form>
</div>
